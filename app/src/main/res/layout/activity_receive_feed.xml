<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sk_vr.videostreamer.ReceiveFeedActivity"
    android:background="@mipmap/bg">

    <TextView
        android:id="@+id/statusText"
        android:text="Status: Not connected to sender"
        android:textColor="@android:color/background_light"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/statusText"
        android:id="@+id/contentDisplayText"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:text="Content Received:"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:rotation="90"
        android:scaleType="fitCenter"
        android:id="@+id/receivedImg"
        android:layout_below="@id/contentDisplayText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
