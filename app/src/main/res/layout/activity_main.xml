<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sk_vr.videostreamer.MainActivity"
    android:background="@mipmap/bg">

    <Button
        android:id="@+id/sendFeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:textColor="@android:color/background_light"
        android:padding="15dp"
        android:text="Send Video Feed"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/receiveFeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Video Feed"
        android:background="@color/blue"
        android:textColor="@android:color/background_light"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/sendFeedButton"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/streamSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Send Offline Video"
        android:background="@color/blue"
        android:textColor="@android:color/background_light"
        android:padding="15dp"
        android:layout_marginTop="190dp"
        android:layout_below="@+id/receiveFeedButton"/>
    <Button
        android:id="@+id/streamReceiveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Receive Offline Video"
        android:background="@color/blue"
        android:textColor="@android:color/background_light"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/streamSendButton"/>

</RelativeLayout>
